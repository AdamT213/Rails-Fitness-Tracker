<% @users.each do |user| %>
  <% if user.avatar_file_size != nil %>
    <%= image_tag user.avatar.url(:thumb) if user.avatar %>
  <% end %>
  <%= user.email %><br /> 
  <% if user.bio != nil%>
    <%= user.bio %><br />
  <% end %>
  <%= link_to "View detailed info", user_path(user) %><br>
<% end %>
